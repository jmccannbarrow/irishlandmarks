{{> mainmenu _id="editlandmark"}}
<section class="ui raised segment">
    <div class="ui grid ">
        <div class="ui ten wide column">
            <div class="ui stacked fluid form segment">
                <form action="/editlandmark/{{landmark._id}}" method="POST" enctype="multipart/form-data" >
                    <h3 class="ui header">Manage your Landmark</h3>

                    <div class="field">

                        <label>Name</label>
                        <input value="{{landmark.name}}" type="text" name="name">
                        <div class="field">
                            <label>Description</label>

                            <input value="{{landmark.description}}" type="text" name="description">
                            <div></div>
                            <div></div>
                            <div class="field">
                                <label>Categorys</label>



                                <div>
                                    <select name="ddlcategory" id="ddlcategory">

                                        {{#each categorys}}

                                            <option value="{{Name}}">{{Name}} </option>

                                        {{/each}}
                                    </select>
                                </div>

                                <input type="hidden" name="category" id="category" value="{{landmark.category}}" required >



                                <div></div>
                                <div class="field">
                                    <label>Latitude</label>

                                    <input value="{{landmark.latitude}}" type="text" name="latitude">
                                    <div></div>
                                    <div></div>
                                    <div class="field">
                                        <label>Longitude</label>

                                        <input value="{{landmark.longitude}}" type="text" name="longitude">
                                        <div></div>
                                        <div></div>
                                        <div class="field">
                                            <label>Image</label>
                                            <img src="{{landmark.imageURL}}" alt="No Image" width="542" height="262">


                                            <div></div>
                                            <div></div>
                                            <div class="field">
                                                <label>Image:</label>
                                                <input type="file" class="form-control" name="imagefile" accept="image/png, image/jpeg" required>
                                                <input type="submit" value="Upload" class="uk-button uk-button-default">

                </form>
            </div>

        </div>
</section>

<script type="text/javascript">

    $('select').on(
            { "focus": function() {

                    this.selectedIndex = -1;
                }
                , "change": function() {
                    choice = $(this).val();


                    this.blur();


                    if (choice == "0") {

                        setTimeout(function() { alert('Please Choose A Category');}, 0);
                        return;
                    }
                    else {

                        $("#category").val(choice);
                    }

                }
            })


    $('form').submit(function () {


        var category = $.trim($('#category').val());



        // Check if empty of not

        if (category  === '') {

            alert('Please select a category');

            return false;

        }



    });


    $(document).ready(function() {

        console.log('Hello');
        var category = $.trim($('#category').val());
        console.log(category);

        $('#ddlcategory').val(category);

    });

</script>



