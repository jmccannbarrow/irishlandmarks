<section class="ui raised segment">
    <h3 class="ui header">My Famous Irish Landmarks </h3>
    <div class="ui grid">







        <div class="ui sixteen wide column">
            <div class="ui stacked fluid form segment">

                <form action="/findLandmarksBycategory" method="POST" >

                    <h3 class="ui header">View by Category</h3>



                    <div class="two fields">
                        <div class="six wide field">
                            <label>Categorys</label>



                            <div>
                                <div class="ui dropdown" name="category">
                                    <input type="hidden" name="category">
                                    <div class="text">Select Category</div>
                                    <i class="ui dropdown icon"></i>
                                    <div class="menu">
                                        {{#each categorys}}
                                            <div class="item">{{Name}}</div>
                                        {{/each}}
                                    </div>
                                </div>
                            </div>

                            <button class="ui blue submit button" input type="submit">View</button>
                </form>

            </div>

        </div>










        <article class="eighteen wide column">
            <table class="ui celled table segment">
                <thead>
                <tr>
                    <th>Name</th>
                    <th>Category</th>
                    <th>Details</th>
                    <th>Delete</th>
                    <th>Update</th>
                    <th>Comments</th>
                    <th>Rating</th>


                </tr>
                </thead>
                <tbody>
                {{#each landmarks}}

                    <tr>
                        <td> {{name}} </td>
                        <td> {{category}} </td>




                        <td><div class="ui item"><a href="/landmark/viewLandmarkDetails/{{_id}}" class="ui icon button"><i class="file alternate outline icon"></i>
                        </a>
                        </td>



                        <td><div class="ui item"><a href="/landmark/deleteLandmark/{{_id}}" class="ui icon button"><i class="icon trash"></i>
                        </a>
                        </td>
                        <td><div class="ui item"><a href="/landmark/showLandmarkSettings/{{_id}}" class="ui icon button"><i class="edit icon"></i>
                        </a>
                        </td>
                        <td> {{comment}} </td>
                        <td> {{star}} </td>

                    </tr>
                {{/each}}
                </tbody>
            </table>
        </article>
    </div>
</section>



<script type="text/javascript">
    $('select').on(
            { "focus": function() {

                    this.selectedIndex = -1;
                }
                , "change": function() {
                    choice = $(this).val();


                    this.blur();
                    $("#category").val(choice);
                    //alert(choice);


                }
            })

