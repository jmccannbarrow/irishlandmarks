<section class="ui raised segment">
    <h3 class="ui header">All Famous Irish Landmarks </h3>
    <div class="ui grid">







        <div class="ui sixteen wide column">

            <div class="ui stacked fluid form segment">
                <form action="/editlandmark/{{landmark._id}}" method="POST" enctype="multipart/form-data" >
                    <h3 class="ui header">View by Categorys</h3>
                    
=======











            <article class="eighteen wide column">
                <table class="ui celled table segment">
                    <thead>
                    <tr>
                        <th>Name</th>
                        <th>Details</th>
                        <th>Creator</th>
                        <th>Add Comments & Rating</th>

                    </tr>
                    </thead>
                    <tbody>
                    {{#each landmarks}}

                        <tr>
                            <td> {{name}} </td>




                            <td><div class="ui item"><a href="/landmark/viewLandmarkDetails/{{_id}}" class="ui icon button"><i class="file alternate outline icon"></i>
                            </a>

                            <td> {{user.firstName}} {{user.lastName}} </td>
                            <td><div class="ui item"><a href="/landmark/showCommentSettings/{{_id}}" class="ui icon button"><i class="edit icon"></i>
                            </a>
                            </td>
                        </tr>
                    {{/each}}
                    </tbody>
                </table>
            </article>
        </div>
</section>



<script type="text/javascript">
    $('select').on(
            { "focus": function() {

                    this.selectedIndex = -1;
                }
                , "change": function() {
                    choice = $(this).val();
                    { alert(choice);}
                    window.location.href = "http://localhost:3000/managelandmarksbycategory"

                    this.blur();


                    if (choice == "0") {

                        setTimeout(function() { alert('Please Choose A Category');}, 0);
                        return;
                    }
                    else {

                        $("#category").val(choice);
                    }

                }
            })
</script>